{
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch Flask App",
      "program": "${workspaceFolder}/ImageMicroService/controller/app.py",
      "env": {
        "FLASK_APP": "controller/app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--host=0.0.0.0",
        "--port=8080"
      ],
      "jinja": true
    }
  ]
}